@using EmployeeManagment.Models;


@inherits FormEmployeeBase

<EditForm Model="@Employee" OnValidSubmit="validSubmit">



    <DataAnnotationsValidator></DataAnnotationsValidator>
    <ValidationSummary></ValidationSummary>
    <h3>Edit Employee</h3>
    <hr />
    <div class="form-group row m-2">
        <label for="firstName" class="col-sm-2 col-form-label">
            First Name
        </label>
        <div class="col-sm-10">
            <InputText id="firstName" class="form-control" placeholder="First Name"
            @bind-Value="Employee.FirstName" />
            <ValidationMessage For="@(()=> Employee.FirstName)"></ValidationMessage>
        </div>
    </div>
    <div class="form-group row m-2">
        <label for="lastName" class="col-sm-2 col-form-label">
            Last Name
        </label>
        <div class="col-sm-10">
            <InputText id="lastName" class="form-control" placeholder="Last Name"
            @bind-Value="Employee.LastName" />
            <ValidationMessage For="@(()=> Employee.LastName)"></ValidationMessage>

        </div>
    </div>
    <div class="form-group row m-2">
        <label for="email" class="col-sm-2 col-form-label">
            Email
        </label>
        <div class="col-sm-10">
            <InputText id="email" class="form-control" placeholder="Email"
            @bind-Value="Employee.Email" />
        </div>
    </div>
    <div class="form-group row m-2">
        <label for="department" class="col-sm-2 col-form-label">
            Department
        </label>
        <div class="col-sm-10">
            <InputSelect id="department" @bind-Value="Employee.DepartmentID" class="form-control">
                @foreach (var dept in Departments)
                {
                    <option value="@dept.Id">@dept.Name</option>
                }
            </InputSelect>
        </div>
    </div>

    <div class="form-group row m-2">
        <label for="dateOFBirth" class="col-sm-2 col-form-label">
            Date OF Birth
        </label>
        <div class="col-sm-10">
            <InputDate id="dateOFBirth" @bind-Value="Employee.DateOfBirth" class="form-control"></InputDate>
        </div>
    </div>


    <div class="form-group row m-2">
        <label for="gender" class="col-sm-2 col-form-label">
            Gender
        </label>
        <div class="col-sm-10">
            <InputSelect id="gender" @bind-Value="Employee.Gender" class="form-control">
                @foreach (var gender in Enum.GetValues(typeof(Gender)))
                {
                    <option value="@gender">@gender</option>
                }
            </InputSelect>
        </div>
    </div>

    <div class="form-group row m-2">
        <label for="DepartmentName" class="col-sm-2 col-form-label">
            Department Name
        </label>
        <div class="col-sm-10">
            @if (Employee.Department != null)
            {

                <InputText id="DepartmentName" class="form-control" @bind-Value="Employee.Department.Name"></InputText>
            }
        </div>
    </div>
    <button class="btn btn-primary m-2" type="submit">Submit</button>
    @if (TypeOfOperation == "Update")
    {
        <button class="btn btn-danger m-2" @onclick="DeleteEmployee">DELETE</button>
    }

</EditForm>
